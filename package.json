{
  "name": "open-sspm-website",
  "version": "1.0.0",
  "description": "Open-SSPM Website",
  "private": true,
  "scripts": {
    "build:css": "npx @tailwindcss/cli -i ./src/input.css -o ./dist/app.css --minify",
    "build": "npm run build:css && node scripts/prepare-site.mjs",
    "watch": "npx @tailwindcss/cli -i ./src/input.css -o ./dist/app.css --watch",
    "deploy": "wrangler pages deploy ./site"
  },
  "devDependencies": {
    "@tailwindcss/cli": "^4.1.18",
    "basecoat-css": "^0.3.9",
    "tailwindcss": "^4.1.18",
    "wrangler": "^4.59.2"
  },
  "dependencies": {
    "@tabler/icons-webfont": "^3.36.0"
  }
}
